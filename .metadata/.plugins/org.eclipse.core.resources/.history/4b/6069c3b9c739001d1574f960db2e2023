#ifndef CALCULOS_H_
#define CALCULOS_H_

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include <stdlib.h>

#include "inputs.h"

/**
 * \fn void ElegirCondeferacion(int*, int*, int*, int*, int*, int*)
 * \brief Le permite al usuario elegir la confederacion del jugador. Incrementando en 1 la variable contadora correspondiente.
 *
 * \param contAFC Variable contadora que se va a incrementar en 1 si el usuario selecciona la opcion confederacion AFC
 * \param contCAF Variable contadora que se va a incrementar en 1 si el usuario selecciona la opcion confederacion CAF
 * \param contCONCACAF Variable contadora que se va a incrementar en 1 si el usuario selecciona la opcion confederacion CONCACAF
 * \param contCONMEBOL Variable contadora que se va a incrementar en 1 si el usuario selecciona la opcion confederacion CONMEBOL
 * \param contUEFA Variable contadora que se va a incrementar en 1 si el usuario selecciona la opcion confederacion UEFA
 * \param contOFC Variable contadora que se va a incrementar en 1 si el usuario selecciona la opcion confederacion OFC
 */

void ElegirCondeferacion(int* contAFC, int* contCAF, int* contCONCACAF, int* contCONMEBOL, int* contUEFA, int* contOFC);

/**
 * \fn float CalcularPromedio(int*, int*)
 * \brief Calcula el promedio a partir de dos datos ingresados
 *
 * \param contador Hace referencia a alguno de todos los contadores confederacion, haciendo de dividendo
 * \param contadorTotal Hace referencia al contador general, de todas las confederaciones, haciendo de divisor
 * \return
 */

float CalcularPromedio(int *contador, int* contadorTotal);

int CalcularMantenimiento(int* resultado, int* costoHospedaje, int* costoComida, int* costoTransporte);

int VerificarExistenGastos(int *transporte, int* hospedaje, int* comida);


#endif /* CALCULOS_H_ */
